{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowLogging",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        },
	{
	    "Sid": "AllowPassingRoleToECSTaskRoles",
	    "Effect": "Allow",
	    "Action": "iam:PassRole",
	    "Resource": "*"
	},
        {
            "Sid": "AllowStartingECSTasks",
            "Effect": "Allow",
            "Action": "ecs:RunTask",
            "Resource": "*"
        },
        {
            "Sid": "AllowCreatingLogGroups",
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:*:*:*"
        }
    ]
}
